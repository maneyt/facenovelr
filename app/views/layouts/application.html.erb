<!DOCTYPE html>
<html>
<head>
  <title>Facenovel</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="//js.pusher.com/2.2/pusher.min.js"></script>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
     window.PUSHER_KEY = "<%= ENV.fetch("PUSHER_KEY") %>";
     <% if signed_in? %>
       window.PUSHER_CHANNEL = "<%= current_user.id %>";
     <% end %>
  </script>
</head>
<body>

<h1><%= link_to "Facenovelr", root_path %></h1>

<% if signed_in? %>
  <h3> You are signed in as <%= link_to current_user.name, user_show_path(current_user) %></h3>
  <%= button_to "Sign out", :session, method: :delete %>
<% end %>

<div class="outer-container">
  <%= yield %>
</div>

</body>
</html>
